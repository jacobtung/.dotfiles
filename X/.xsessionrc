#/bin/sh
. /home/jacob/.local/scripts/jacob_bash_lib.sh
export PATH=$PATH:/home/jacob/.local/scripts

#~/.dropbox-dist/dropboxd &
#dropbox start &
/home/jacob/.dropbox-dist/dropboxd & 

# MPD daemon start (if no other user instance exists)
